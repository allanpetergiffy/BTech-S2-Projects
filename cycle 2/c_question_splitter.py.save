import re
import os
import subprocess
import tkinter as tk
from tkinter import messagebox, filedialog


def split_questions(text):
    parts = re.split(r'\n\s*(\d+)\.\s*', text)
    questions = []
    for i in range(1, len(parts), 2):
        num = parts[i].strip()
        qtext = parts[i + 1].strip()
        questions.append((num, qtext))
    return questions


def create_files(questions, folder, open_files):
    if not os.path.exists(folder):
        os.makedirs(folder)

    for num, qtext in questions:
        filename = os.path.join(folder, f"question_{num}.c")
        with open(filename, "w") as f:
            f.write(qtext)

        if open_files:
            subprocess.Popen(["gedit", filename])


def process_text():
    text = text_box.get("1.0", tk.END).strip()
    if not text:
        messagebox.showwarning("Warning", "Please paste your questions in the box!")
        return

    folder = filedialog.askdirectory(title="Select Folder to Save Files")
    if not folder:
        return

    open_files = open_var.get()
    questions = split_questions(text)
    create_files(questions, folder, open_files)

    messagebox.showinfo("Success", f"{len(questions)} files created in {folder}")


root = tk.Tk()
root.title("C Question Splitter (No Install)")
root.geometry("800x600")

label = tk.Label(root, text="Paste your C questions below (Numbered 1., 2., 3., ...):")
label.pack(pady=10)

text_box = tk.Text(root, wrap=tk.WORD)
text_box.pack(expand=True, fill=tk.BOTH, padx=10, pady=10)

open_var = tk.BooleanVar()
open_check = tk.Checkbutton(root, text="Open files in gedit after saving", variable=open_var)
open_check.pack()

button = tk.Button(root, text="Split into Files", command=process_text)
button.pack(pady=10)

root.mainloop()

